<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>用户信息</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <style type="text/css">
        a{
            color:#000;
        }
        #btn_group{
            padding:20px 20px;
        }
        #btn_group button{
            margin-right:10px;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">汽车管理系统</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <% if(login){ %>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/client">客人查询</a></li>
                <li><a href="/rent">租赁登记</a></li>
                <li><a href="/return">归还登记</a></li>
                <li><a href="/statistics">统计分析</a></li>
                <li><a href="/showClass">类别档案</a></li>
                <li><a href="/car">汽车档案</a></li>
                <li><a href="/echarts">echarts</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="/quit">退出系统</a></li>
            </ul>
            <%}else{%>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/reg">注册</a></li>
                <li><a href="/login">登录</a></li>
            </ul>
            <%}%>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<% if(login){ %>
<div class="container">
    <div class="btn-group" role="group" aria-label="..." id="btn_group">
        <button type="button" class="btn btn-default  btn-info" id="create"  data-toggle="modal" data-target="#myModal">新建</button>
        <button type="button" class="btn btn-default  btn-info" data-toggle="modal" data-target="#amend" id="amendOne">修改</button>
        <button type="button" class="btn btn-danger" id="del">删除员工</button>
        <div type="button" class="btn btn-danger" id="return"><a href="/index">返回</a></div>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th></th>
            <th>id</th>
            <th>用户名</th>
            <th>电话</th>
            <th>联系地址</th>
            <th>身份证</th>
            <th>驾驶证号</th>
        </tr>
        </thead>
        <tbody id="tbody">
        <%
        for(var i=0;i<result.length;i++){
        %>
        <tr>
            <th><input type="radio" name="check" class="gou" data-id="<%=result[i]._id%>"></th>
            <th><%=i+1%></th>
            <th><%=result[i].user%></th>
            <th><%=result[i].tel%></th>
            <th><%=result[i].add%></th>
            <th><%=result[i].identity%></th>
            <th><%=result[i].carid%></th>
        </tr>

        <%
        }
        %>
        </tbody>
    </table>

    <!--//新建-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">新建客户</h4>
                </div>
                <div class="modal-body">
                    <p>姓名：<input type="text" name="user" id="name"/></p>
                    <p>电话：
                        <input type="text" name="tel" id="tel"/>
                    </p>
                    <p>
                        联系地址：
                        <input type="text" name="address" id="address"/>
                    </p>
                    <p>
                        身份证号：
                        <input type="text" name="identity" id="identity"/>
                    </p>
                    <p>
                        驾驶证号：
                        <input type="text" name="carid" id="carid"/>
                    </p>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">cancel</button>
                    <button type="button" class="btn btn-primary" id="btn">ok</button>
                </div>

            </div>
        </div>
    </div>

    <!--//修改-->
    <div class="modal fade" id="amend" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">编辑员工</h4>
                </div>
                <div class="modal-body">
                    <p>姓名：<input type="text" name="user" id="name"/></p>
                    <p>电话：
                        <input type="text" name="tel" id="tel"/>
                    </p>
                    <p>
                        联系地址：
                        <input type="text" name="address" id="address"/>
                    </p>
                    <p>
                        身份证号：
                        <input type="text" name="identity" id="identity"/>
                    </p>
                    <p>
                        驾驶证号：
                        <input type="text" name="carid" id="carid"/>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">cancel</button>
                    <button type="button" class="btn btn-primary" id="amendbtn">ok</button>
                </div>

            </div>
        </div>
    </div>

    <div id="pagenavbox"></div>

</div>
<%}else{%>
<div class="container">
    <img src="/car.jpg" alt="">
</div>
<%}%>



    <script src="js/jquery-1.12.3.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/PageNav.js"></script>

<script>
    //新建客户
    $("#btn").click(function(){
        // console.log($("option:selected").val())

        $.post("/saveclient",{"user":$("input[name=user]").val(),"tel":$("input[name=tel]").val(),"add":$("input[name=address]").val(),"identity":$("input[name=identity]").val(),"carid":$("input[name=carid]").val()},function(data){
            console.log(data);
            if(data.result==1){
                alert("插入成功");
                window.location="/client";
            }else if(data.result==-1){
                // alert("")
            }
        })
    })

    //修改客户
    $("#amendOne").click(function(){
        var id=$("input[name=check]:checked").data("id");

        $.ajax({
            "url":"/amendclient/"+id,
            "type":"post",
            "success":function(data){
                console.log(data);
                var data=data.result[0];

                // console.log($("#amend option:selected"),data.state);
                $("#amend .modal-dialog .modal-body input[name=user]").val(data.user);
                $("#amend .modal-dialog .modal-body input[name=tel]").val(data.tel);
                $("#amend .modal-dialog .modal-body input[name=address]").val(data.add);
                $("#amend .modal-dialog .modal-body input[name=identity]").val(data.identity);
                $("#amend .modal-dialog .modal-body input[name=carid]").val(data.carid);

            }
        })

        // $.post("/amend/"+id,{"id":$("input[name=user]").val(),"check":"0","user":$("input[name=user]").val(),"sex":$("input[name=xingbie]:checked").val(),"state":$("option:selected").val(),"hobby":$("input[name=hobby]").val(),"marriage":$("input[name=marriage]").val(),"bir":$("input[name=bir]").val(),"address":$("input[name=address]").val()},function(data){
        //     if(data.result==1){
        //         alert("编辑成功");
        //     }
        // })
    })

    //点击修改按钮
    $("#amendbtn").click(function(){
        var id=$("input[name=check]:checked").data("id");
        $.post("/updateclient/"+id,{"user":$("#amend .modal-dialog .modal-body input[name=user]").val(),"tel":$("#amend .modal-dialog .modal-body input[name=tel]").val(),"add":$("#amend .modal-dialog .modal-body input[name=address]").val(),"identity":$("#amend .modal-dialog .modal-body input[name=identity]").val(),"carid":$("#amend .modal-dialog .modal-body input[name=carid]").val()},function(data){
            if(data.result==1){
                alert("更改成功");
                window.location="/client";
            }
        })
    })

    //删除
    $("#del").click(function(){
        var id=$("input[name=check]:checked").data("id");
        // console.log(id);
        $("input[name=check]:checked").parent("th").parent("tr").remove();
        $.post("/delclient/"+id,function(data){
            if(data.result==1){
                alert("删除成功");
            }
        })
    })


    $.get("/Allclient?page=1",function(data){
        //分页条
        new PageNav({
            boxid : "pagenavbox",
            page : 1,
            pageAmount : data.pageAmount,
            change : function(pagenumber){
                gotopage(pagenumber);
                // console.log($(this).html());
            }
        });

        gotopage(1);

        function gotopage(pagenumber){
            //清空
            $("#tbody").empty();

            //获得新的数据
            $.get("/Allclient?page=" + pagenumber,function(data){
                console.log(data);
                $.each(data.results,function(i, n){

                    //创建一个tr标签
                    // console.log(i,n);
                    $tr = $("<tr></tr>");
                    $("<th><input type='radio' name='check' class='gou' data-id='"+n._id+"'></th>").appendTo($tr);
                    $("<th></th>").html(i+1).appendTo($tr);
                    $("<th></th>").html(n.user).appendTo($tr);
                    $("<th></th>").html(n.tel).appendTo($tr);
                    $("<th></th>").html(n.add).appendTo($tr);
                    $("<th></th>").html(n.identity).appendTo($tr);
                    $("<th></th>").html(n.carid).appendTo($tr);
                    //上树
                    $tr.appendTo($("#tbody"));
                });
            });
        }
    });




</script>

</body>
</html>